<?xml version="1.0" encoding="utf-8"?>
<form>
		<field name="name_project" type="text" label="COM_JV_PROJECT_NAME"
			description="JFIELD_TITLE_DESC"
			class="input-xlarge input-large-text"
			size="40"
			required="true" />

		<field name="short_des" type="text" label="COM_JV_SHORT_DES_LABEL"
			description="JFIELD_ALIAS_DESC"
			class="input-xlarge input-large-text"
			size="40" 
			required="true"
			/>

		<field name="des" type="editor"
			label="COM_CONTENT_FIELD_ARTICLETEXT_LABEL" description="COM_CONTENT_FIELD_ARTICLETEXT_DESC"
			filter="JComponentHelper::filterText" buttons="true" 
			required="true"
			/>

		<field name="publish" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
		</field>

		<field name="catid" type="categoryedit"
			label="JCATEGORY" description="JFIELD_CATEGORY_DESC"		
		>
		</field>
		<field name="price" type="text" label="COM_JV_PRICE_LABEL"
			description="COM_JV_PRICE_DESC"
			class="input-xlarge input-large-text"
			size="40" 
			required="true"
			/>
		<field
			name="img_thumb"
			type="media"
			label="COM_JV_IMG_THUMB_LABEL"
			description="COM_CONTENT_FIELD_INTRO_DESC" 
			required="true"
			/>
		
		<field name="img_thumb_alt"
			type="text"
			label="COM_JV_IMAGE_THUMB_ALT"
			description="COM_CONTENT_FIELD_IMAGE_ALT_DESC"
			size="20"/>
		<field
			name="img"
			type="media"
			label="COM_JV_IMG_LABEL"
			description="COM_CONTENT_FIELD_FULL_DESC"
			required="true"
			/>
		
		<field name="img_alt"
			type="text"
			label="COM_JV_IMAGES_ALT"
			description="COM_CONTENT_FIELD_IMAGE_ALT_DESC"
			size="20"/>
</form>
