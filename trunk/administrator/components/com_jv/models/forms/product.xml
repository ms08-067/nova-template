<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_categories/models/fields" >
		<field name="title" type="text" label="COM_JV_PROJECT_NAME"
			description="JFIELD_TITLE_DESC"
			class="input-xlarge input-large-text"
			size="40"
			required="true" />

		<field name="alias" type="text" label="COM_JV_SHORT_DES_LABEL"
			description="JFIELD_ALIAS_DESC"
			class="input-xlarge input-large-text"
			size="40" />

		<field name="articletext" type="editor"
			label="COM_CONTENT_FIELD_ARTICLETEXT_LABEL" description="COM_CONTENT_FIELD_ARTICLETEXT_DESC"
			filter="JComponentHelper::filterText" buttons="true" />

		<field name="state" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
		</field>

		<field name="catid" type="categoryedit"
			label="JCATEGORY" description="JFIELD_CATEGORY_DESC"
			
		>
		</field>

		<field name="tags"
			type="text"
			label="COM_JV_PRODUCT_PRICE"
			description="PRICE_DESC"
			class="span12"
			multiple="true"
		>
		</field>	
	</fieldset>

	<fields name="images" label="COM_CONTENT_FIELD_IMAGE_OPTIONS">
		<field
			name="image_intro"
			type="media"
			label="COM_JV_IMG_THUMB_LABEL"
			description="COM_CONTENT_FIELD_INTRO_DESC" />
		
		<field name="image_intro_alt"
			type="text"
			label="COM_JV_IMAGE_THUMB_ALT"
			description="COM_CONTENT_FIELD_IMAGE_ALT_DESC"
			size="20"/>
		<field
			name="image_fulltext"
			type="media"
			label="COM_JV_IMG_LABEL"
			description="COM_CONTENT_FIELD_FULL_DESC"/>
		
		<field name="image_fulltext_alt"
			type="text"
			label="COM_JV_IMAGES_ALT"
			description="COM_CONTENT_FIELD_IMAGE_ALT_DESC"
			size="20"/>
		
	</fields>

</form>
