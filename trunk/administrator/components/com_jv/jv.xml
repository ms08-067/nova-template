<?xml version="1.0" encoding="utf-8"?>
<extension type="component"
           version="2.5.0"
           method="upgrade">

	<name>jv</name>
	<!-- The following elements are optional and free of formatting constraints -->
	<creationDate>June 2014</creationDate>
	<author>Hung Phan</author>
	<authorEmail>hunguit@yahoo.com</authorEmail>
	<authorUrl>http://www.joomlavi.net</authorUrl>
	<version>0.0.4</version>
	<description>Description of the Joomlavi component ...</description>

	<update> <!-- Runs on update; New in 2.5 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	<files folder="site">
		<filename>index.html</filename>
		<filename>jv.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
	</files>

	<administration>
		<!-- Administration Menu Section -->
		<menu>COM_JV_MENU</menu>
		<submenu>
            <menu view="cpanel" img="" link="option=com_jv&amp;view=jv">COM_JV_MENU_SUB_JV</menu>
            <menu view="config" img="" link="option=com_jv&amp;view=temp">COM_JV_MENU_SUB_TEMP</menu>
        </submenu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>jv.php</filename>
			<folder>sql</folder>
			<folder>language</folder>
		</files>
	</administration>

</extension>